    <style>
        /* Hero Header Galeri */
        .hero-galeri {
            background-image: linear-gradient(rgba(0, 51, 102, 0.7), rgba(0, 51, 102, 0.7)), 
                              url('/gambar/bg-galeri.jpg'); 
            background-size: cover;
            background-position: center;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
        }

        .hero-galeri h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
            text-shadow: 2px 2px 10px rgba(0,0,0,0.3);
        }

        /* Gallery Grid */
        .gallery-container {
            padding: 60px 10%;
            background-color: #fffaf5;
        }

        .gallery-filter {
            text-align: center;
            margin-bottom: 40px;
        }

        .filter-btn {
            background: white;
            border: 2px solid #003366;
            color: #003366;
            padding: 8px 20px;
            border-radius: 25px;
            cursor: pointer;
            font-weight: 600;
            margin: 5px;
            transition: 0.3s;
        }

        .filter-btn.active, .filter-btn:hover {
            background: #003366;
            color: white;
        }

        .photo-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
        }

        .photo-item {
            position: relative;
            border-radius: 12px;
            overflow: hidden;
            aspect-ratio: 4/3;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            transition: transform 0.4s ease, opacity 0.4s ease;
        }

        .photo-item.hide {
            display: none;
        }

        .photo-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: 0.5s;
        }

        .photo-overlay {
            position: absolute;
            bottom: -100%;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(transparent, rgba(0, 51, 102, 0.9));
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            padding: 20px;
            color: white;
            transition: 0.4s;
        }

        .photo-item:hover .photo-overlay {
            bottom: 0;
        }

        .photo-item:hover img {
            transform: scale(1.1);
        }

        .photo-overlay h4 {
            font-size: 1.1rem;
            margin-bottom: 5px;
        }

        .photo-overlay p {
            font-size: 0.8rem;
            opacity: 0.8;
        }
    </style>
</head>
