    <style>
        :root {
            --primary-blue: #003366;
            --accent-gold: #b8860b;
            --soft-bg: #fdfdfd;
        }

        /* Hero Header */
        .hero-about {
            background-image: linear-gradient(rgba(0, 51, 102, 0.75), rgba(0, 51, 102, 0.75)), 
                              url('/gambar/bg-sekolah.jpg'); 
            background-size: cover;
            background-position: center;
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
        }

        .hero-about h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            margin-bottom: 10px;
        }

        /* Content Section */
        .content-wrapper {
            padding: 80px 10%;
            background-color: var(--soft-bg);
        }

        .history-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 60px;
            align-items: center;
        }

        .history-text h2 {
            color: var(--primary-blue);
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            margin-bottom: 25px;
            line-height: 1.2;
        }

        .history-text h2::before {
            content: "PENGENALAN";
            display: block;
            font-size: 0.85rem;
            color: var(--accent-gold);
            letter-spacing: 3px;
            margin-bottom: 10px;
            font-family: 'Poppins', sans-serif;
        }

        .history-text p {
            line-height: 1.8;
            color: #444;
            margin-bottom: 20px;
            text-align: justify;
        }

        .history-image {
            position: relative;
        }

        .history-image img {
            width: 100%;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            z-index: 2;
            position: relative;
        }

        .history-image::after {
            content: "";
            position: absolute;
            top: -20px;
            right: -20px;
            width: 100%;
            height: 100%;
            border: 5px solid var(--accent-gold);
            border-radius: 20px;
            z-index: 1;
        }

        /* Stats Cards */
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin: 60px 0;
        }

        .stat-card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            transition: 0.3s;
        }

        .stat-card:hover { transform: translateY(-5px); }
        .stat-card i { font-size: 2.5rem; color: var(--accent-gold); margin-bottom: 15px; }
        .stat-card h3 { font-size: 2rem; color: var(--primary-blue); margin-bottom: 5px; }
        .stat-card p { font-size: 0.9rem; color: #777; font-weight: 600; }

        /* Moto Section */
        .moto-box {
            background: var(--primary-blue);
            color: white;
            padding: 60px 40px;
            border-radius: 30px;
            text-align: center;
            margin-top: 80px;
            background-image: radial-gradient(circle at top right, rgba(255,255,255,0.1), transparent);
        }

        .btn-back {
            background: var(--primary-blue);
            color: white;
            padding: 15px 40px;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 600;
            transition: 0.4s;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

        .btn-back:hover {
            background: var(--accent-gold);
            transform: translateX(-5px);
        }

        @media (max-width: 992px) {
            .history-grid { grid-template-columns: 1fr; gap: 40px; }
            .history-image { order: -1; }
            .hero-about h1 { font-size: 2.5rem; }
        }
    </style>
</head>
