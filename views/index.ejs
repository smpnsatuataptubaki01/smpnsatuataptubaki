    <style>
        /* --- CSS Global & Penunjang Layout --- */
        :root {
            --primary-blue: #003366;
            --accent-gold: #b8860b;
            --danger-red: #e74c3c;
        }

        .swiper-berita { 
            width: 100%; 
            margin: 0 auto; 
            padding-bottom: 40px; 
            overflow: hidden; 
        }

        .news-card { 
            background: white; 
            border-radius: 12px; 
            overflow: hidden; 
            box-shadow: 0 5px 15px rgba(0,0,0,0.05); 
            height: 100%; 
            transition: 0.3s; 
            display: flex;
            flex-direction: column;
        }
        .news-card:hover { transform: translateY(-5px); }
        .news-img { 
            width: 100%; 
            height: 180px; 
            object-fit: cover; 
            background-color: #f0f0f0;
        }
        .news-text { padding: 15px; flex-grow: 1; }
        
        .news-text h4 { 
            min-height: 45px; 
            margin-bottom: 8px; 
            color: var(--primary-blue);
            display: -webkit-box;
            -webkit-line-clamp: 2;
            line-clamp: 2; 
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        /* --- Pengumuman Styling --- */
        .ann-list-dynamic { 
            background: white; 
            padding: 20px; 
            border-radius: 12px; 
            box-shadow: 0 5px 15px rgba(0,0,0,0.05); 
        }
        .ann-item { 
            display: flex; 
            align-items: flex-start; 
            gap: 10px; 
            padding: 12px 0; 
            border-bottom: 1px dashed #ddd; 
        }
        .ann-item:last-child { border: none; }

        .title-with-line { 
            border-left: 5px solid #ffcc00; 
            padding-left: 15px; 
            margin-bottom: 25px; 
            color: var(--primary-blue); 
            text-transform: uppercase; 
            font-size: 1.5rem; 
            font-weight: 700;
        }

        .btn-all {
            display: block;
            margin-top: 20px;
            text-align: center;
            font-size: 0.85rem;
            color: var(--primary-blue);
            font-weight: bold;
            text-decoration: none;
            padding: 12px;
            border: 2px solid var(--primary-blue);
            border-radius: 8px;
            transition: 0.3s;
        }
        .btn-all:hover {
            background: var(--primary-blue);
            color: white;
        }

        .welcome-section {
            padding: 60px 5%;
            background: #fff;
        }
        .welcome-grid {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 40px;
        }
        .headmaster-img-wrapper {
            flex: 1;
            min-width: 300px;
            text-align: center;
        }
        .headmaster-img {
            max-width: 100%;
            height: auto;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            border: 5px solid white;
        }
        .welcome-content {
            flex: 1.5;
            min-width: 300px;
        }
        .welcome-text {
            font-size: 1.1rem;
            line-height: 1.8;
            color: #555;
            font-style: italic;
            margin-bottom: 20px;
            text-align: justify;
        }

        /* --- STYLE MODAL BROSUR --- */
        .modal-brosur {
            display: none; 
            position: fixed; 
            z-index: 9999; 
            left: 0; top: 0;
            width: 100%; height: 100%;
            background-color: rgba(0,0,0,0.8);
            overflow: auto;
        }
        .modal-content-brosur {
            background-color: #fefefe;
            margin: 2% auto;
            padding: 20px;
            border-radius: 15px;
            width: 95%;
            max-width: 800px;
            position: relative;
            text-align: center;
            animation: zoomIn 0.4s;
        }
        @keyframes zoomIn {
            from {transform: scale(0.5); opacity: 0;}
            to {transform: scale(1); opacity: 1;}
        }
        .close-brosur {
            position: absolute;
            right: 15px; top: 10px;
            color: #aaa;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }
        .close-brosur:hover { color: #000; }

        /* --- UPDATE LAYOUT 3 KOLOM (BERITA - PENGUMUMAN - BROSUR) --- */
        .main-layout-container {
            max-width: 1400px;
            margin: 40px auto;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: flex-start;
            gap: 30px; 
            padding: 0 20px;
        }

        .berita-col {
            flex: 0 0 45%; 
            min-width: 0;
        }

        .pengumuman-col {
            flex: 0 0 20%; 
            min-width: 0;
        }

        .brosur-col {
            flex: 0 0 30%; 
            min-width: 0;
        }

        /* Styling Gambar Brosur agar Utuh & Jelas */
        .brosur-display-img {
            width: 100%;
            height: auto;
            display: block;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
            object-fit: contain; 
            transition: transform 0.3s;
        }

        .brosur-display-img:hover {
            transform: scale(1.02);
        }

        @media (max-width: 1024px) {
            .main-layout-container {
                flex-direction: column;
                align-items: center;
            }
            .berita-col, .pengumuman-col, .brosur-col {
                flex: 1 0 100%;
                width: 100%;
            }
        }
    </style>
</head>
