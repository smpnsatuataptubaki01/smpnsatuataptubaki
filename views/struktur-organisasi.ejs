    <style>
        :root {
            --primary-blue: #003366;
            --accent-gold: #b8860b;
            --light-bg: #f4f7f9;
        }

        /* Hero Header */
        .hero-struktur {
            background-image: linear-gradient(rgba(0, 51, 102, 0.8), rgba(0, 51, 102, 0.8)), 
                              url('/gambar/bg-sekolah.jpg'); 
            background-size: cover;
            background-position: center;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
        }

        .hero-struktur h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
        }

        /* Styling Bagan Struktur */
        .struktur-section {
            padding: 60px 5%;
            background-color: var(--light-bg);
            text-align: center;
        }

        .org-container {
            max-width: 1100px;
            margin: 0 auto;
            overflow-x: auto;
            padding: 20px;
        }

        .org-chart {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Kartu Pengurus */
        .node {
            background: white;
            border-bottom: 4px solid var(--accent-gold);
            padding: 20px;
            border-radius: 12px;
            width: 260px;
            box-shadow: 0 10px 20px rgba(0,0,0,0.05);
            display: flex;
            flex-direction: column;
            align-items: center;
            transition: 0.3s;
            position: relative;
            z-index: 2;
        }

        .node:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

        .node-img {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 15px;
            border: 4px solid #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            background-color: #eee;
        }

        .node h4 { color: var(--primary-blue); margin: 5px 0; font-size: 1rem; }
        .node p { color: #666; font-size: 0.8rem; margin: 0; font-weight: 600; text-transform: uppercase; letter-spacing: 1px; }

        /* Khusus Kepala Sekolah */
        .node-leader { 
            background: var(--primary-blue); 
            border-bottom-color: var(--accent-gold);
        }
        .node-leader h4 { color: white; }
        .node-leader p { color: #f0f0f0; }

        /* Garis Penghubung */
        .line-v { width: 2px; height: 40px; background: #ccc; }
        
        .horizontal-group {
            display: flex;
            gap: 30px;
            justify-content: center;
            position: relative;
            padding-top: 20px;
        }

        .horizontal-group::before {
            content: "";
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 2px;
            height: 20px;
            background: #ccc;
        }

        @media (max-width: 768px) {
            .horizontal-group { flex-direction: column; align-items: center; }
            .horizontal-group::before { display: none; }
            .hero-struktur h1 { font-size: 2rem; }
        }
    </style>
