        :root {
            --primary-blue: #003366;
            --accent-blue: #00509d;
            --gold: #b8860b;
            --light-bg: #f8f9fa;
        }

        /* Hero Header PPDB */
        .hero-ppdb {
            background-image: linear-gradient(rgba(0, 51, 102, 0.8), rgba(0, 51, 102, 0.8)), 
                              url('/gambar/bg-ppdb.jpg'); 
            background-size: cover;
            background-position: center;
            height: 350px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
        }

        .hero-ppdb h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            margin-bottom: 10px;
        }

        /* PPDB Section */
        .ppdb-section {
            padding: 80px 10%;
            background-color: var(--light-bg);
        }

        .ppdb-container {
            max-width: 1000px;
            margin: 0 auto;
            background: white;
            padding: 50px;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.08);
            position: relative;
            overflow: hidden;
        }

        .ppdb-container::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: var(--gold);
        }

        .ppdb-title {
            text-align: center;
            margin-bottom: 50px;
        }

        .ppdb-title h2 {
            font-family: 'Playfair Display', serif;
            color: var(--primary-blue);
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .ppdb-title p {
            color: var(--gold);
            font-weight: 600;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .requirement-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
        }

        .requirement-item {
            display: flex;
            align-items: flex-start;
            gap: 20px;
            padding: 20px;
            background: #fff;
            border: 1px solid #f0f0f0;
            border-radius: 12px;
            transition: 0.3s;
        }

        .requirement-item:hover {
            border-color: var(--gold);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

        .requirement-item i {
            color: var(--primary-blue);
            font-size: 1.5rem;
            background: rgba(0, 51, 102, 0.1);
            padding: 15px;
            border-radius: 50%;
        }

        .requirement-text h4 {
            color: var(--primary-blue);
            margin-bottom: 8px;
            font-size: 1.1rem;
        }

        .requirement-text p {
            font-size: 0.9rem;
            color: #666;
            line-height: 1.6;
            margin: 0;
        }

        .info-box {
            background-color: #f0f7ff;
            border-left: 5px solid var(--primary-blue);
            padding: 30px;
            margin-top: 40px;
            border-radius: 0 12px 12px 0;
        }

        .info-box h5 {
            color: var(--primary-blue);
            margin-bottom: 15px;
            font-size: 1.2rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .btn-action-group {
            text-align: center;
            margin-top: 50px;
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .btn-download {
            background: var(--gold);
            color: white;
            padding: 15px 30px;
            text-decoration: none;
            border-radius: 10px;
            font-weight: bold;
            transition: 0.3s;
        }

        .btn-download:hover {
            background: #966d09;
        }

        @media (max-width: 768px) {
            .requirement-grid { grid-template-columns: 1fr; }
            .ppdb-container { padding: 30px 20px; }
            .hero-ppdb h1 { font-size: 2.5rem; }
        }
    </style>
</head>
