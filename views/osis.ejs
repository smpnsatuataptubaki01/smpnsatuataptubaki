    <header class="hero-osis">
        <div class="hero-content">
            <h1>Organisasi Siswa (OSIS)</h1>
            <p style="font-size: 1.2rem; letter-spacing: 1px;">Wadah Inovasi dan Kepemimpinan Masa Depan</p>
        </div>
    </header>

    <section class="osis-section">
        <div class="osis-intro">
            <h2>Membangun Kepemimpinan Muda</h2>
            <div style="width: 80px; height: 4px; background: var(--gold); margin: 20px auto;"></div>
            <p>OSIS SMPN Satu Atap Tubaki bukan sekadar organisasi, melainkan laboratorium kepemimpinan bagi siswa untuk belajar berorganisasi, mengasah tanggung jawab, dan berkontribusi nyata bagi kemajuan sekolah.</p>
        </div>

        <div class="osis-structure">
            <h3 style="font-family: 'Playfair Display', serif; color: var(--primary-blue); font-size: 2rem; margin-bottom: 10px;">Struktur Pengurus OSIS</h3>
            <p class="text-muted">Periode Aktif Berjalan</p>
            
            <div class="structure-grid">
                <% if (typeof strukturOsis !== 'undefined' && strukturOsis.length > 0) { %>
                    <% strukturOsis.forEach(s => { %>
                        <div class="osis-card">
                            <img src="/gambar/osis/struktur/<%= s.foto %>" class="osis-photo" onerror="this.src='/gambar/default-user.jpg'">
                            <h5><%= s.jabatan %></h5>
                            <p><%= s.nama %></p>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div style="grid-column: 1/-1; padding: 50px; background: #eee; border-radius: 20px;">
                        <p>Data pengurus belum diunggah.</p>
                    </div>
                <% } %>
            </div>
        </div>

        <hr style="margin: 100px 0; opacity: 0.1;">

        <h3 style="text-align:center; font-family:'Playfair Display', serif; color:var(--primary-blue); font-size: 2.2rem;">Dokumentasi Kegiatan</h3>
        <div style="width: 50px; height: 3px; background: var(--gold); margin: 15px auto 40px;"></div>
        
        <div class="osis-gallery">
            <% if (typeof kegiatanOsis !== 'undefined' && kegiatanOsis.length > 0) { %>
                <% kegiatanOsis.forEach(k => { %>
                    <div class="gallery-item">
                        <img src="/gambar/osis/kegiatan/<%= k.gambar %>" onerror="this.src='/gambar/default.jpg'">
                        <div class="gallery-desc">
                            <span><i class="fa-regular fa-calendar"></i> <%= new Date(k.tanggal).toLocaleDateString('id-ID', { day:'numeric', month:'long', year:'numeric' }) %></span>
                            <h4><%= k.judul_kegiatan %></h4>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p style="grid-column: 1/-1; text-align: center; color: #999;">Belum ada dokumentasi kegiatan.</p>
            <% } %>
        </div>

        <div style="text-align: center; margin-top: 80px;">
            <a href="/" class="btn-primary" style="padding: 15px 40px; border-radius: 50px; display: inline-flex; align-items: center; gap: 10px; text-decoration: none; background: var(--primary-blue); color: white; font-weight: 600;">
                <i class="fa-solid fa-house"></i> Kembali ke Beranda
            </a>
        </div>
    </section>

    <footer class="main-footer" style="background-color: #1a3a5f; color: white; padding: 40px 10% 20px;">
