    <link rel="stylesheet" href="/css/style.css">
    <style>
        :root {
            --primary-blue: #003366;
            --gold: #b8860b;
            --light-bg: #fffaf5;
        }

        /* Hero Header */
        .hero-osis {
            background-image: linear-gradient(rgba(0, 51, 102, 0.75), rgba(0, 51, 102, 0.75)), 
                              url('/gambar/bg-osis.jpg'); 
            background-size: cover;
            background-position: center;
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
        }

        .hero-osis h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            margin-bottom: 10px;
            text-shadow: 2px 4px 15px rgba(0,0,0,0.3);
        }

        /* Section Konten */
        .osis-section {
            padding: 80px 10%;
            background-color: var(--light-bg);
        }

        .osis-intro {
            text-align: center;
            max-width: 900px;
            margin: 0 auto 60px;
        }

        .osis-intro h2 {
            font-family: 'Playfair Display', serif;
            color: var(--primary-blue);
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        /* STRUKTUR ORGANISASI DYNAMIC */
        .osis-structure {
            margin-top: 50px;
            text-align: center;
        }
        
        .structure-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 25px;
            justify-content: center;
            margin-top: 40px;
        }

        .osis-card {
            background: white;
            border-bottom: 4px solid var(--gold);
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            display: flex;
            flex-direction: column;
            align-items: center;
            transition: 0.3s;
        }

        .osis-card:hover { transform: translateY(-5px); }

        .osis-photo {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 15px;
            border: 3px solid var(--gold);
            background-color: #f4f4f4;
        }

        .osis-card h5 { 
            margin: 0; 
            font-size: 0.85rem; 
            text-transform: uppercase; 
            letter-spacing: 1px; 
            color: #888;
        }
        
        .osis-card p { 
            margin: 8px 0 0; 
            font-size: 1.1rem; 
            font-weight: bold; 
            color: var(--primary-blue); 
        }

        /* Galeri / Kegiatan */
        .osis-gallery {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            margin-top: 50px;
        }

        .gallery-item {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0,0,0,0.05);
            transition: 0.4s;
            height: 100%;
        }

        .gallery-item:hover { transform: translateY(-10px); }

        .gallery-item img {
            width: 100%;
            height: 230px;
            object-fit: cover;
        }

        .gallery-desc { padding: 20px; text-align: center; }
        .gallery-desc h4 { color: var(--primary-blue); margin-bottom: 8px; font-size: 1.1rem; }
        .gallery-desc span { font-size: 0.8rem; color: var(--gold); font-weight: 600; }

        @media (max-width: 768px) {
            .hero-osis h1 { font-size: 2.5rem; }
            .osis-section { padding: 40px 5%; }
        }
    </style>
</head>
