        :root {
            --primary-blue: #003366;
            --gold: #b8860b;
            --light-bg: #fffaf5;
        }

        /* Hero Header */
        .hero-osis {
            background-image: linear-gradient(rgba(0, 51, 102, 0.75), rgba(0, 51, 102, 0.75)), 
                              url('/gambar/bg-osis.jpg'); 
            background-size: cover;
            background-position: center;
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
        }

        .hero-osis h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            margin-bottom: 10px;
            text-shadow: 2px 4px 15px rgba(0,0,0,0.3);
        }

        /* Section Konten */
        .osis-section {
            padding: 80px 10%;
            background-color: var(--light-bg);
        }

        .osis-intro {
            text-align: center;
            max-width: 900px;
            margin: 0 auto 60px;
        }

        .osis-intro h2 {
            font-family: 'Playfair Display', serif;
            color: var(--primary-blue);
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .osis-intro p {
            line-height: 1.8;
            color: #555;
            font-size: 1.1rem;
        }

        /* STRUKTUR ORGANISASI */
        .osis-structure {
            margin-top: 50px;
            text-align: center;
        }
        
        .structure-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0;
        }

        .osis-card {
            background: white;
            border-bottom: 4px solid var(--gold);
            padding: 25px;
            border-radius: 15px;
            width: 240px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            display: flex;
            flex-direction: column;
            align-items: center;
            transition: 0.3s;
            z-index: 2;
        }

        .osis-card:hover { transform: translateY(-5px); }

        .osis-card.top-rank {
            background: var(--primary-blue);
            color: white;
            border-bottom: 4px solid #f1c40f;
        }

        .osis-photo {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 15px;
            border: 3px solid var(--gold);
            background-color: #f4f4f4;
        }

        .osis-card h5 { margin: 0; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 1px; opacity: 0.8; }
        .osis-card p { margin: 8px 0 0; font-size: 1.1rem; font-weight: bold; color: var(--primary-blue); }
        .osis-card.top-rank p { color: #f1c40f; }

        /* Garis Penghubung */
        .line-v {
            width: 2px;
            height: 40px;
            background: #cbd5e0;
        }

        .structure-row {
            display: flex;
            gap: 30px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 0;
        }

        /* Galeri */
        .osis-gallery {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            margin-top: 50px;
        }

        .gallery-item {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0,0,0,0.05);
            transition: 0.4s;
        }

        .gallery-item:hover { transform: translateY(-10px); }

        .gallery-item img {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }

        .gallery-desc { padding: 25px; text-align: center; }
        .gallery-desc h4 { color: var(--primary-blue); margin-bottom: 8px; font-size: 1.2rem; }
        .gallery-desc p { font-size: 0.9rem; color: #777; }

        @media (max-width: 768px) {
            .hero-osis h1 { font-size: 2.5rem; }
            .osis-card { width: 200px; }
        }
    </style>
</head>
