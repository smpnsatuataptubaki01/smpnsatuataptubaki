    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <link rel="stylesheet" href="/css/style.css">

    <style>
        /* Hero Header Form */
        .hero-form {
            background-image: linear-gradient(rgba(0, 51, 102, 0.7), rgba(0, 51, 102, 0.7)), 
                              url('/gambar/bg-ppdb.jpg'); 
            background-size: cover;
            background-position: center;
            height: 250px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
        }

        .hero-form h1 {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
        }

        /* Form Container */
        .form-section {
            padding: 60px 10%;
            background-color: #fffaf5;
        }

        .form-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            color: #003366;
            margin-bottom: 8px;
            font-size: 0.9rem;
        }

        .form-group input, 
        .form-group select, 
        .form-group textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-family: 'Poppins', sans-serif;
            font-size: 0.9rem;
            transition: 0.3s;
        }

        /* Styling khusus untuk input file */
        .form-group input[type="file"] {
            padding: 8px;
            background: #f9f9f9;
            cursor: pointer;
        }

        .form-group input:focus {
            border-color: #b8860b;
            outline: none;
            box-shadow: 0 0 5px rgba(184, 134, 11, 0.2);
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .form-section-title {
            border-bottom: 2px solid #b8860b;
            padding-bottom: 10px;
            margin-bottom: 25px;
            margin-top: 40px;
            color: #003366;
            font-family: 'Playfair Display', serif;
            font-size: 1.4rem;
        }

        .form-section-title:first-child {
            margin-top: 0;
        }

        .btn-submit {
            background-color: #b8860b;
            color: white;
            padding: 15px 40px;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
            width: 100%;
            font-size: 1rem;
            transition: 0.3s;
            margin-top: 20px;
        }

        .btn-submit:hover {
            background-color: #003366;
        }

        .file-info {
            font-size: 0.75rem;
            color: #666;
            margin-top: 5px;
            display: block;
        }

        @media (max-width: 600px) {
            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>

    <div class="top-header">
        <div class="logo-wrapper">
            <img src="/gambar/logo1.png" alt="Logo" style="height: 50px; margin-right: 10px;">
            <div style="line-height: 1;">
                <span style="font-size: 0.7rem; color: #666;">Website Resmi</span><br>
                <span style="font-weight: bold; color: #003366;">SMPN SATU ATAP TUBAKI</span>
            </div>
        </div>
    </div>

    <nav>
        <div class="nav-container">
            <ul class="nav-menu">
                <li><a href="/">üè† HOME</a></li>
                <li><a href="/guru">PROFIL ‚ñº</a></li>
