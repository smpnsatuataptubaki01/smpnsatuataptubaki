    <style>
        :root {
            --primary-blue: #003366;
            --accent-gold: #b8860b;
            --soft-cream: #fffaf5;
        }

        /* Hero Header */
        .hero-visi {
            background-image: linear-gradient(rgba(0, 51, 102, 0.75), rgba(0, 51, 102, 0.75)), 
                              url('/gambar/bg-visi.jpg'); 
            background-size: cover;
            background-position: center;
            height: 350px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
        }

        .hero-visi h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            margin-bottom: 10px;
        }

        /* Main Section */
        .visi-misi-section {
            padding: 100px 10%;
            background-color: var(--soft-cream);
        }

        /* Visi Card - Polished */
        .visi-container {
            text-align: center;
            max-width: 900px;
            margin: -150px auto 80px; /* Overlap dengan hero */
            background: white;
            padding: 60px 40px;
            border-radius: 30px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.1);
            position: relative;
            z-index: 5;
        }

        .visi-container::before {
            content: "\f10d";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            position: absolute;
            top: 20px;
            left: 40px;
            font-size: 3rem;
            color: rgba(184, 134, 11, 0.1);
        }

        .visi-container i {
            font-size: 3rem;
            color: var(--accent-gold);
            margin-bottom: 20px;
        }

        .visi-container h2 {
            font-family: 'Playfair Display', serif;
            color: var(--primary-blue);
            font-size: 2.5rem;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }

        .visi-container p {
            font-size: 1.4rem;
            line-height: 1.8;
            color: #333;
            font-style: italic;
            font-weight: 400;
        }

        /* Misi Grid */
        .section-title {
            text-align: center;
            font-family: 'Playfair Display', serif;
            color: var(--primary-blue);
            font-size: 2.8rem;
            margin-bottom: 50px;
        }

        .misi-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 30px;
        }

        .misi-item {
            background: white;
            padding: 40px 30px;
            border-radius: 20px;
            transition: 0.4s;
            border-bottom: 4px solid transparent;
            box-shadow: 0 5px 15px rgba(0,0,0,0.03);
        }

        .misi-item:hover {
            transform: translateY(-10px);
            border-bottom: 4px solid var(--accent-gold);
            box-shadow: 0 15px 35px rgba(0,0,0,0.08);
        }

        .misi-icon {
            width: 60px;
            height: 60px;
            background: rgba(0, 51, 102, 0.05);
            color: var(--primary-blue);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 20px;
            transition: 0.3s;
        }

        .misi-item:hover .misi-icon {
            background: var(--primary-blue);
            color: white;
        }

        .misi-content h4 {
            color: var(--primary-blue);
            font-size: 1.25rem;
            margin-bottom: 15px;
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
        }

        .misi-content p {
            font-size: 0.95rem;
            color: #666;
            line-height: 1.7;
        }

        .btn-back {
            background: var(--primary-blue);
            color: white;
            padding: 18px 45px;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 600;
            transition: 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 12px;
            box-shadow: 0 10px 20px rgba(0,51,102,0.15);
        }

        .btn-back:hover {
            background: var(--accent-gold);
            transform: scale(1.05);
        }

        @media (max-width: 768px) {
            .hero-visi h1 { font-size: 2.5rem; }
            .visi-container { padding: 40px 20px; margin-top: -100px; }
            .visi-container p { font-size: 1.1rem; }
        }
    </style>
</head>
