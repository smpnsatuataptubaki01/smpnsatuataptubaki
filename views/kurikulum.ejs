            font-size: 3.5rem; 
            margin-bottom: 10px;
            text-transform: uppercase;
        }

        /* Section Styling */
        .section-container { padding: 80px 10%; background-color: #fffaf5; }
        
        .grid-2 { 
            display: grid; 
            grid-template-columns: 1.2fr 0.8fr; 
            gap: 50px; 
            align-items: center; 
            margin-bottom: 80px; 
        }
        
        .kurikulum-info h2 { 
            color: #003366; 
            font-family: 'Playfair Display', serif; 
            font-size: 2.2rem;
            margin-bottom: 25px; 
            line-height: 1.3;
        }

        .kurikulum-info p { line-height: 1.8; color: #555; margin-bottom: 20px; font-size: 1.05rem; }

        /* Info Cards */
        .info-cards { display: flex; flex-direction: column; gap: 20px; }
        
        .card-box { 
            padding: 30px; 
            border-radius: 15px; 
            color: white; 
            display: flex;
            align-items: center;
            gap: 20px;
            transition: transform 0.3s;
        }

        .card-box:hover { transform: translateX(10px); }
        .card-blue { background: #1a3a5f; }
        .card-gold { background: #b8860b; }
        
        .card-box i { font-size: 2.5rem; opacity: 0.8; }
        .card-box h4 { margin-bottom: 5px; font-size: 1.2rem; }

        /* Mata Pelajaran Grid */
        .mapel-grid { 
            display: grid; 
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); 
            gap: 20px; 
            margin-top: 40px; 
        }

        .mapel-item { 
            background: white; 
            padding: 25px; 
            border-radius: 12px; 
            text-align: center; 
            border-bottom: 4px solid #b8860b;
            box-shadow: 0 10px 20px rgba(0,0,0,0.03);
            transition: 0.3s;
        }

        .mapel-item:hover { transform: translateY(-5px); box-shadow: 0 15px 30px rgba(0,0,0,0.08); }
        .mapel-item h4 { color: #003366; font-size: 1.1rem; margin-bottom: 8px; }
        .mapel-item span { font-size: 0.9rem; color: #b8860b; font-weight: 600; }

        /* KBM Box */
        .kbm-container { 
            display: grid; 
            grid-template-columns: 1fr 1fr; 
            gap: 40px; 
            margin-top: 50px; 
        }

        .kbm-box { 
            background: white; 
            padding: 40px; 
            border-radius: 20px; 
            box-shadow: 0 5px 25px rgba(0,0,0,0.05);
            border: 1px solid #eee;
        }

        .kbm-box h3 { 
            border-bottom: 2px solid #f4f4f4; 
            padding-bottom: 20px; 
            margin-bottom: 25px; 
            color: #003366; 
            display: flex; 
            align-items: center; 
            gap: 15px;
            font-family: 'Playfair Display', serif;
        }

        .jam-row { 
            display: flex; 
            justify-content: space-between; 
            padding: 15px 0; 
            border-bottom: 1px dashed #eee;
            font-size: 1rem;
        }

        .jam-row span:first-child { font-weight: 600; color: #333; }

        @media (max-width: 900px) {
            .grid-2, .kbm-container { grid-template-columns: 1fr; }
            .hero-kurikulum h1 { font-size: 2.5rem; }
        }
    </style>
