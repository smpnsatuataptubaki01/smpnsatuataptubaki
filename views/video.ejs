        }

        .hero-video h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3.2rem;
            margin-bottom: 10px;
        }

        /* Video Section */
        .video-container {
            padding: 80px 10%;
            background-color: var(--light-bg);
        }

        .section-intro {
            text-align: center;
            margin-bottom: 50px;
        }

        .section-intro h2 {
            color: var(--primary-blue);
            font-family: 'Playfair Display', serif;
            font-size: 2.2rem;
            position: relative;
            display: inline-block;
            padding-bottom: 15px;
        }

        .section-intro h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: var(--accent-gold);
        }

        .video-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 40px;
        }

        .video-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0,0,0,0.05);
            transition: 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border: 1px solid rgba(0,0,0,0.05);
        }

        .video-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 45px rgba(0,0,0,0.1);
        }

        .video-wrapper {
            position: relative;
            padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
            height: 0;
            overflow: hidden;
            background: #000;
        }

        .video-wrapper iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
        }

        .video-info {
            padding: 25px;
        }

        .video-tag {
            background: rgba(184, 134, 11, 0.1);
            color: var(--accent-gold);
            padding: 5px 12px;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            display: inline-block;
            margin-bottom: 15px;
        }

        .video-info h3 {
            font-family: 'Playfair Display', serif;
            color: var(--primary-blue);
            margin-bottom: 12px;
            font-size: 1.3rem;
            line-height: 1.4;
        }

        .video-info p {
            font-size: 0.9rem;
            color: #666;
            line-height: 1.6;
        }

        .btn-youtube {
            display: inline-block;
            margin-top: 15px;
            color: #cd201f;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.85rem;
            transition: 0.3s;
        }

        .btn-youtube:hover {
            color: var(--primary-blue);
        }

        @media (max-width: 768px) {
            .video-grid { grid-template-columns: 1fr; }
            .hero-video h1 { font-size: 2.5rem; }
        }
