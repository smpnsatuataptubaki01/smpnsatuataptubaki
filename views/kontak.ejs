            margin-bottom: 25px;
            font-size: 2rem;
        }

        .form-input {
            width: 100%;
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid #eee;
            border-radius: 8px;
            font-family: 'Poppins', sans-serif;
            background-color: #f9f9f9;
            transition: 0.3s;
        }

        .form-input:focus {
            outline: none;
            border-color: #b8860b;
            background-color: #fff;
        }

        .btn-send {
            background: #b8860b;
            color: white;
            padding: 15px 40px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: 0.3s;
            width: 100%;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-send:hover {
            background: #003366;
            transform: translateY(-3px);
        }

        /* Map */
        .map-container {
            width: 100%;
            height: 450px;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            border: 5px solid white;
        }

        @media (max-width: 900px) {
            .contact-grid {
                grid-template-columns: 1fr;
