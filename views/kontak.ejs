            margin-bottom: 5px;
            color: #fff;
        }

        .info-item p {
            font-size: 0.95rem;
            opacity: 0.8;
            line-height: 1.6;
        }

        /* Form Card */
        .contact-form {
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        }

        .contact-form h2 {
            font-family: 'Playfair Display', serif;
