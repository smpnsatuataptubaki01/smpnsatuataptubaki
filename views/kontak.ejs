            gap: 40px;
            margin-bottom: 50px;
        }

        /* Info Card */
        .contact-info {
            background: #003366;
            color: white;
            padding: 40px;
            border-radius: 15px;
            height: fit-content;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .info-item {
            display: flex;
            align-items: flex-start;
            gap: 20px;
            margin-bottom: 30px;
